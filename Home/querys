CREATE TABLE zara_links(
	zara_id SERIAL PRIMARY KEY,
	zara_link VARCHAR(1000),
	zara_username VARCHAR(100),
	CONSTRAINT fk_user
	FOREIGN KEY (zara_username)
	REFERENCES users(username)
);


CREATE TABLE users(
	users_id SERIAL PRIMARY KEY,
	username VARCHAR(100) UNIQUE,
	password VARCHAR(100)
);


CREATE TABLE zara_stocks(
	zara_stock_id SERIAL PRIMARY KEY,
	zara_stock VARCHAR(1000),
	zara_size VARCHAR(100),
	zara_id INT,
	item_picture_url VARCHAR(1000),
	CONSTRAINT fk_zara_url
	FOREIGN KEY (zara_id)
	REFERENCES zara_links(zara_id)
);



SELECT * FROM users;
SELECT * FROM zara_links;
SELECT * FROM zara_stocks;

DROP TABLE zara_stocks;
DROP TABLE zara_links;

